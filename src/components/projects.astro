---
import { Image } from "astro:assets";
import libraryStore from "../../public/projects/library-store/home.png";
import issueTracker from "../../public/projects/issue-tracker/home.png";
import realtimeChat from "../../public/projects/realtime-chat/main-realtime-chat.jpg";
import clinicBooking from "../../public/projects/clinic-booking-system/clinic-home-en.png";

interface Project {
  title: string;
  image: ImageMetadata;
  link: string;
  preview: string;
  status: string;
  slug: string;
  isPremium?: boolean;
  description: string;
}

const projects: Project[] = [
  {
    title: "Library Store",
    image: libraryStore as ImageMetadata,
    link: "#",
    preview: "/projects/library-store",
    status: "Full-Stack",
    slug: "library-store",
    description: "A full-stack online library store built with Django.",
  },
  {
    title: "Issue Tracker",
    image: issueTracker as ImageMetadata,
    link: "#",
    preview: "/projects/issue-tracker",
    status: "Web App",
    slug: "issue-tracker",
    description: "An issue tracking platform built using Next.js App Router.",
  },
  {
    title: "Real-Time Chat",
    image: realtimeChat as ImageMetadata,
    link: "#",
    preview: "/projects/realtime-chat",
    status: "Real-Time",
    slug: "realtime-chat",
    description: "A simple real-time chat application built with Next.js.",
  },
  {
    title: "Clinic Booking",
    image: clinicBooking as ImageMetadata,
    link: "https://clinic-reserving-system.vercel.app/en",
    preview: "/projects/clinic-booking-system",
    status: "Full-Stack",
    slug: "clinic-booking-system",
    isPremium: true,
    description:
      "A production-ready, white-label clinic management solution designed to streamline healthcare operations. This premium application offers a seamless booking experience for patients and a powerful administrative dashboard for doctors.",
  },
];

const premiumProjects = projects.filter((p) => p.isPremium);
const otherProjects = projects.filter((p) => !p.isPremium);
---

<section
  id="projects"
  class="py-12 border-t border-[#ffffff10] text-[var(--white)]"
>
  <div class="max-w-5xl mx-auto">
    <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">My work</h2>
    <h3 class="text-4xl md:text-5xl font-medium mb-8">Projects</h3>

    {
      premiumProjects.map((project) => (
        <div class="mb-12 group relative">
          <div class="absolute -top-4 -right-4 z-10 bg-gradient-to-r from-yellow-400 to-yellow-600 text-black text-sm font-bold px-4 py-1.5 rounded-full shadow-lg shadow-yellow-500/20 animate-pulse flex items-center gap-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-crown"
            >
              <path d="m2 4 3 12h14l3-12-6 7-4-7-4 7-6-7zm3 16h14" />
            </svg>
            PREMIUM PRODUCT
          </div>
          <a href={`/projects/${project.slug}`} class="block">
            <div class="rounded-3xl overflow-hidden shadow-2xl hover:shadow-yellow-500/20 transition-all duration-500 border-2 border-yellow-500/50 relative">
              <div class="absolute inset-0 bg-gradient-to-t from-black via-black/40 to-transparent z-10" />
              <div class="absolute bottom-0 left-0 right-0 h-3/4 bg-gradient-to-t from-black via-black/80 to-transparent backdrop-blur-[2px] z-10" />
              <Image
                src={project.image}
                alt={project.title}
                class="w-full h-[500px] md:h-[450px] object-cover group-hover:scale-105 transition-transform duration-700"
              />
              <div class="absolute bottom-0 left-0 right-0 p-6 md:p-10 z-20">
                <div class="flex flex-col md:flex-row md:items-end justify-between gap-4">
                  <div>
                    <h4 class="text-3xl md:text-5xl font-bold text-white mb-2">
                      {project.title}
                    </h4>
                    <p class="text-yellow-400 font-medium text-lg mb-4">
                      Production-Ready SaaS Solution
                    </p>
                    <p class="text-white/80 max-w-2xl line-clamp-2 md:line-clamp-none">
                      {project.description}
                    </p>
                  </div>
                  <div class="bg-yellow-500 text-black font-bold px-6 py-3 rounded-xl flex items-center gap-2 hover:bg-yellow-400 transition-colors">
                    View Product
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="20"
                      height="20"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <>
                        <path d="M5 12h14" />
                        <path d="m12 5 7 7-7 7" />
                      </>
                    </svg>
                  </div>
                </div>
              </div>
            </div>
          </a>
        </div>
      ))
    }

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {
        otherProjects.map((project) => (
          <div class="group relative">
            <a href={`/projects/${project.slug}`} class="block">
              <div class="rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 mb-4">
                <Image
                  src={project.image}
                  alt={project.title}
                  class="w-full h-48 md:h-72 object-cover group-hover:scale-105 transition-transform duration-300"
                />
              </div>
              <div class="flex items-center px-3">
                <div class="flex-grow">
                  <h4 class="text-2xl font-semibold">{project.title}</h4>
                  <span class="py-1 text-sm text-[var(--white-icon)]">
                    {project.status}
                  </span>
                </div>
                <div class="flex gap-2 ml-auto">
                  {project.link === "#" ? (
                    <div
                      aria-label="GitHub (Private)"
                      class="size-14 flex justify-center items-center text-[var(--white-icon)] opacity-50 cursor-not-allowed border border-1 border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c]"
                    >
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                        class="size-7"
                      >
                        <path d="M24 12L18.3431 17.6569L16.9289 16.2426L21.1716 12L16.9289 7.75736L18.3431 6.34315L24 12ZM2.82843 12L7.07107 16.2426L5.65685 17.6569L0 12L5.65685 6.34315L7.07107 7.75736L2.82843 12ZM9.78845 21H7.66009L14.2116 3H16.3399L9.78845 21Z" />
                      </svg>
                    </div>
                  ) : (
                    <a
                      target="_blank"
                      href={project.link}
                      aria-label="GitHub"
                      class="size-14 flex justify-center items-center text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-1 border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]"
                    >
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                        class="size-7"
                      >
                        <path d="M24 12L18.3431 17.6569L16.9289 16.2426L21.1716 12L16.9289 7.75736L18.3431 6.34315L24 12ZM2.82843 12L7.07107 16.2426L5.65685 17.6569L0 12L5.65685 6.34315L7.07107 7.75736L2.82843 12ZM9.78845 21H7.66009L14.2116 3H16.3399L9.78845 21Z" />
                      </svg>
                    </a>
                  )}
                  <a
                    href={project.preview}
                    aria-label="Preview"
                    class="size-14 flex justify-center items-center text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-1 border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                      class="size-7"
                    >
                      <path d="M16.0037 9.41421L7.39712 18.0208L5.98291 16.6066L14.5895 8H7.00373V6H18.0037V17H16.0037V9.41421Z" />
                    </svg>
                  </a>
                </div>
              </div>
            </a>
          </div>
        ))
      }
    </div>
    <a
      target="_blank"
      href="https://github.com/obsessedwithweb?tab=repositories"
      aria-label="GitHub"
      class="w-full flex items-center justify-center gap-2 mt-9 text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-[var(--white-icon-tr)] p-3 rounded-full bg-[#1414149c] hover:bg-[var(--white-icon-tr)] hover:scale-105"
    >
      <span class="md:text-lg text-md">More projects on</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="size-6"
      >
        <path
          d="M12.001 2C6.47598 2 2.00098 6.475 2.00098 12C2.00098 16.425 4.86348 20.1625 8.83848 21.4875C9.33848 21.575 9.52598 21.275 9.52598 21.0125C9.52598 20.775 9.51348 19.9875 9.51348 19.15C7.00098 19.6125 6.35098 18.5375 6.15098 17.975C6.03848 17.6875 5.55098 16.8 5.12598 16.5625C4.77598 16.375 4.27598 15.9125 5.11348 15.9C5.90098 15.8875 6.46348 16.625 6.65098 16.925C7.55098 18.4375 8.98848 18.0125 9.56348 17.75C9.65098 17.1 9.91348 16.6625 10.201 16.4125C7.97598 16.1625 5.65098 15.3 5.65098 11.475C5.65098 10.3875 6.03848 9.4875 6.67598 8.7875C6.57598 8.5375 6.22598 7.5125 6.77598 6.1375C6.77598 6.1375 7.61348 5.875 9.52598 7.1625C10.326 6.9375 11.176 6.825 12.026 6.825C12.876 6.825 13.726 6.9375 14.526 7.1625C16.4385 5.8625 17.276 6.1375 17.276 6.1375C17.826 7.5125 17.476 8.5375 17.376 8.7875C18.0135 9.4875 18.401 10.375 18.401 11.475C18.401 15.3125 16.0635 16.1625 13.8385 16.4125C14.201 16.725 14.5135 17.325 14.5135 18.2625C14.5135 19.6 14.501 20.675 14.501 21.0125C14.501 21.275 14.6885 21.5875 15.1885 21.4875C19.259 20.1133 21.9999 16.2963 22.001 12C22.001 6.475 17.526 2 12.001 2Z"
        ></path>
      </svg>
    </a>
  </div>
</section>
